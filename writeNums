public class Assignment5 {

	public static void main(String[] args) {
		
	System.out.println(writeNums(5));

	}
	public static void writeNums(int n) {
	    if(n < 1)
	        throw new IllegalArgumentException();
	        
	    if(n == 1) {
	        System.out.print(1);
	        return;
	    }
	    
	    writeNums(n - 1);
	    System.out.print(", " + n);
	}

}
